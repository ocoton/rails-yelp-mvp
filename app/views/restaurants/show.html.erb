<h2> <%= @restaurant.name %> </h2>
<h3> <%= @restaurant.category %></h3>
<p> <%= @restaurant.address %> | <%= @restaurant.phone_number %></p>
<%= link_to 'Leave a review', new_restaurant_review_path(@restaurant) %>

<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.rating %> <br> <%= review.content %></li>
  <% end %>
</ul>

   <%= link_to "back to list", restaurants_path %>
